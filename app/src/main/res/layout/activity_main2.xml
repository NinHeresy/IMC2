<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramonlopes.imc2.MainActivity">
    <Button
        android:id="@+id/submit"
        android:layout_width="203dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:text="Calcular"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt2"
        android:layout_width="172dp"
        android:layout_height="51dp"
        style="@style/EditTextStyle"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:inputType="phone"
        android:hint="Peso:(60 Kg)"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edt1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/edt1"
        android:layout_alignStart="@+id/edt1" />

    <EditText
        android:id="@+id/edt1"
        android:layout_width="175dp"
        android:layout_height="49dp"
        style="@style/EditTextStyle"
        android:textSize="18sp"
        android:layout_marginTop="54dp"
        android:textStyle="normal|bold"
        android:inputType="phone"
        android:hint="Altura(1.80Â² ):"
        android:layout_below="@+id/txtcabecalho"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imgAltura"
        android:layout_toRightOf="@+id/imgAltura" />

    <TextView
        android:id="@+id/txtcabecalho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/str_top"
        android:textColor="@color/Blue"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imgAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edt1"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/imgPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_alignTop="@+id/edt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edt2"
        android:layout_marginTop="49dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Sexo:"
        android:textColor="@color/Black"
        android:textSize="22sp"
        android:layout_toLeftOf="@+id/edt2"
        android:layout_toStartOf="@+id/edt2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/sexo_child"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/txtcabecalho"
        android:layout_alignStart="@+id/txtcabecalho"
        android:layout_alignRight="@+id/txtcabecalho"
        android:layout_alignEnd="@+id/txtcabecalho" />
</RelativeLayout>

