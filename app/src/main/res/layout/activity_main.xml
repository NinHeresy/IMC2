<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ramonlopes.imc2.MainActivity">

        <Button
            android:id="@+id/btn"
            android:layout_width="203dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:onClick="teste"
            android:elevation="0dp"
            android:text="Calcular"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt2"
            style="@style/EditTextStyle"
            android:layout_width="172dp"
            android:layout_height="51dp"
            android:layout_alignEnd="@+id/edt1"
            android:layout_alignRight="@+id/edt1"
            android:layout_below="@+id/edt1"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/imgPeso"
            android:layout_toRightOf="@+id/imgPeso"
            android:hint="Peso:(em Kg)"
            android:inputType="phone|numberDecimal"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/edt1"
            style="@style/EditTextStyle"
            android:layout_width="175dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtcabecalho"
            android:layout_marginTop="54dp"
            android:layout_toEndOf="@+id/imgAltura"
            android:layout_toRightOf="@+id/imgAltura"
            android:hint="Altura(em Metros):"
            android:inputType="phone|numberDecimal"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtcabecalho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/str_top"
            android:textColor="@color/Blue"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgAltura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/edt1"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/imgPeso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/edt2"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </RelativeLayout>
